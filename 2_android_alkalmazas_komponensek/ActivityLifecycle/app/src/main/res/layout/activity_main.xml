<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="hu.netacademia.activitylifecycle.MainActivity">

    <TextView
        android:id="@+id/felirat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kérlek add meg a neved!" />

    <EditText
        android:id="@+id/bevitel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/navigacio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefonszám bekérése"/>

    <TextView
        android:id="@+id/telefonszam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

</LinearLayout>
